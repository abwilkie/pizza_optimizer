<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Present</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.present %></td>
        <% if user.present? %>
          <td><%= button_to 'Absent', inactivate_user_path(user), method: :post %></td> 
          <% else %>
          <td><%= button_to 'Present', activate_user_path(user), method: :post %></td> 
        <% end %>
        <td><%= button_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
