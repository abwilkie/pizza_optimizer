<p id="notice"><%= notice %></p>

<h1>Preferences</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Topping</th>
      <th>Inedible</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @preferences.each do |preference| %>
      <tr>
        <td><%= preference.user_id %></td>
        <td><%= preference.topping_id %></td>
        <td><%= preference.inedible %></td>
        <td><%= preference.rating %></td>
        <td><%= link_to 'Edit', edit_preference_path(preference) %></td>
        <td><%= link_to 'Destroy', preference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Preference', new_preference_path %>
<p>
<%= link_to 'See Toppings', toppings_path %>
<br>
<%= link_to 'See People', users_path %>
</p>
